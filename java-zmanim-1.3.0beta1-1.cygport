inherit ant

DESCRIPTION="Java Zmanim API"
HOMEPAGE="http://www.kosherjava.com/zmanim-project/"
SRC_URI="http://kosherjava.googlecode.com/files/${P#java-}.zip"
SRC_DIR=.

DISTCLEANFILES="lib/*.jar"

ANT_BUILD_XML="build/build.xml"
ANT_BUILD_ARGS="-Dsrc_dir=src -Dthird_party_jars=${JAVA_DIR}"
ANT_INSTALL_JARS="lib/*.jar"
ANT_INSTALL_JAVADOC="docs/api"
